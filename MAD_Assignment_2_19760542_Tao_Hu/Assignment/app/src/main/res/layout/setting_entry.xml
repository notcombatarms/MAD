<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/rectangle_outline_top_bottom_fill_blue_dark"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tvVarName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/rectangle_outline_top_bottom_fill_blue_light"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/black"
        android:paddingLeft="1.5dp"
        android:paddingStart="1.5dp"
        android:paddingRight="1.5dp"
        android:paddingEnd="1.5dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvVarValue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVarValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/rectangle_outline_top_bottom_fill_blue_light"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/black"
        android:paddingLeft="1.5dp"
        android:paddingStart="1.5dp"
        android:paddingRight="1.5dp"
        android:paddingEnd="1.5dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"
        app:layout_constraintLeft_toRightOf="@+id/tvVarName"
        app:layout_constraintRight_toLeftOf="@id/etVarInput"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etVarInput"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/black"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnVarUpdate"
        app:layout_constraintLeft_toRightOf="@+id/tvVarValue"/>

    <Button
        android:id="@+id/btnVarUpdate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:text="@string/btnVarUpdate"
        android:background="@drawable/rectangle_round_outline_top_bottom_fill_blue_light"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@android:color/black"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/etVarInput"/>

</androidx.constraintlayout.widget.ConstraintLayout>